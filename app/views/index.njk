        </div>
        <div class="swiper-item col-xl-3 col-lg-4 col-md-6 col-xs-8">
          <img src="/images/other-product-3.png"/>
        </div>
        <div class="swiper-item col-xl-3 col-lg-4 col-md-6 col-xs-8">
          <img src="/images/other-product-1.png"/>
        </div>
        <div class="swiper-item col-xl-3 col-lg-4 col-md-6 col-xs-8">
          <img src="/images/other-product-2.png"/>
        </div>
        <div class="swiper-item col-xl-3 col-lg-4 col-md-6 col-xs-8">
          <img src="/images/other-product-3.png"/>
        </div>
      </div>
      <button class="arrow-left" data-swiper-prev></button>
      <button class="arrow-right" data-swiper-next></button>
    </div>
  </div>
  <div id="modal_test" class="modal-content" data-close-on-overlay="false">
    <div class="modal-close" data-modal-close></div>
    Test modal
  </div>
{% endblock %}
